@model Office.ViewModels.UsersViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm("LoginUser","Login"))
{ 
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Name" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Name" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>

    <button type="submit" value="submit" class="btn btn-danger">Save</button>

}